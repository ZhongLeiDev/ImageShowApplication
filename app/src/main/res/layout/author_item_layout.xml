<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:customview="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    app:cardCornerRadius="4dp"
    >

    <com.example.zl.commoncomponent.ImageTextLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        customview:default_text="@string/default_text"
        customview:default_text_color="@color/colorWhite"
        customview:default_text_size="16dp"
        customview:text_visible="true"
        customview:default_src="@drawable/bg"
        >

    </com.example.zl.commoncomponent.ImageTextLinearLayout>

</android.support.v7.widget.CardView>