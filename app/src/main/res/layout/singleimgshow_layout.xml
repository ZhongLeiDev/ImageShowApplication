<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/btnwhite1"
    android:padding="5dp"
    >

    <com.example.zl.imageshowapplication.widget.ZoomImageView
        android:id="@+id/singleimgview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

    </com.example.zl.imageshowapplication.widget.ZoomImageView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp">

        <com.example.zl.commoncomponent.TextProgressBar
            android:id="@+id/singleprogressBar"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="180dp"
            android:layout_height="30dp" />

        <Button
            android:id="@+id/singlebtndownload"
            android:background="@drawable/download"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"/>

    </LinearLayout>

</RelativeLayout>