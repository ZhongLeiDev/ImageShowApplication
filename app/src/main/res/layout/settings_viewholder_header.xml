<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/activity_top_margin"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/view_holder_header_image"
        android:contentDescription="@string/settings_account_setting"
        android:layout_width="@dimen/settings_field_height"
        android:layout_height="@dimen/settings_header_height"
        android:layout_marginStart="@dimen/activity_start_margin" />

    <TextView
        android:id="@+id/view_holder_header_text"
        android:layout_width="match_parent"
        android:layout_height="@dimen/settings_header_height"
        android:layout_marginStart="@dimen/activity_devided_margin"
        android:gravity="center_vertical"
        android:text="@string/settings_account_setting"/>

</LinearLayout>
