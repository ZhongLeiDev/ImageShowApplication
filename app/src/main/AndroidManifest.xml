<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.zl.imageshowapplication">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".MainApplication"
        android:screenOrientation="portrait"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.GeekListPagerImageViewActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activity.BcyPicturesListPagerImageViewActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activity.ZoomPictureListProgressActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".activity.BcyAlbumPicturesListActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".activity.SingleImgShowActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".activity.searchresult.SearchResultActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".activity.BcyAlbumsListActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".activity.RandomSinglePictureShowActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".activity.HuaBanSingleImgShowActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".activity.searchresult.HuaBanSearchResultActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".activity.HuaBanBoardItemsShowActivity"
            android:screenOrientation="portrait"/>

        <service android:name="com.example.zl.service.NetworkStatusService"/>
    </application>

</manifest>